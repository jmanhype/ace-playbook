{
  "name": "apollo-mcp-wrapper",
  "version": "1.0.0",
  "description": "Apollo Router MCP wrapper for GraphQL exposure",
  "scripts": {
    "start": "rover supergraph compose --config ./supergraph.yaml | ./router --config router.yaml --supergraph -",
    "download-router": "curl -sSL https://router.apollo.dev/download/nix/latest | sh",
    "setup": "npm run download-router && npm install",
    "dev": "nodemon --watch supergraph.yaml --watch router.yaml --exec npm start"
  },
  "dependencies": {
    "@apollo/rover": "^0.20.0",
    "@apollo/federation": "^2.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}