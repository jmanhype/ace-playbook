# ACE Playbook Environment Configuration

# LLM API Keys (required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///ace_playbook.db
DATABASE_WAL_MODE=true

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
FAISS_INDEX_TYPE=IndexFlatIP

# Semantic Deduplication
SIMILARITY_THRESHOLD=0.8
DEDUPLICATION_MODE=default

# Promotion Gates
SHADOW_HELPFUL_MIN=0
STAGING_HELPFUL_MIN=3
PROD_HELPFUL_MIN=5
STAGING_RATIO_MIN=3.0
PROD_RATIO_MIN=5.0

# Performance Budgets
PLAYBOOK_RETRIEVAL_P50_MS=10
END_TO_END_OVERHEAD_MAX_PERCENT=15
BASELINE_THROUGHPUT_MIN_PERCENT=95

# Rollback Configuration
ROLLBACK_TIME_WINDOW_SEC=300
ROLLBACK_ACCURACY_THRESHOLD=-0.05
ROLLBACK_LATENCY_THRESHOLD=1.1

# Monitoring & Observability
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
METRICS_PORT=9090

# Multi-Domain Isolation
DEFAULT_DOMAIN=default
ENFORCE_DOMAIN_FILTER=true
ALLOW_CROSS_DOMAIN_READ=false

# Consolidation
MAX_BULLETS=150
ZERO_EFFECTIVENESS_DAYS=10
TARGET_BULLETS=100

# Development
DEBUG=false
PYTEST_ADDOPTS=-v --tb=short
